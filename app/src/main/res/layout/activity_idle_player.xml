<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/idlePlayerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/sporty_bg"
    android:gravity="center_horizontal"
    android:padding="16dp">

    <!-- Card Image -->
    <ImageView
        android:id="@+id/cardImage"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_marginTop="16dp"
        android:scaleType="fitCenter"
        android:contentDescription="Card Image"
        android:layout_gravity="center" />


    <!-- Player Name -->
    <TextView
        android:id="@+id/cardName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player Name"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp" />

    <!-- Card Attributes as TextViews -->
    <TextView
        android:id="@+id/tv_power"
        style="@style/AttrText"
        android:text="Power: --" />

    <TextView
        android:id="@+id/tv_strikeRate"
        style="@style/AttrText"
        android:text="Strike Rate: --" />

    <TextView
        android:id="@+id/tv_wickets"
        style="@style/AttrText"
        android:text="Wickets: --" />

    <TextView
        android:id="@+id/tv_matchesPlayed"
        style="@style/AttrText"
        android:text="Matches Played: --" />

    <TextView
        android:id="@+id/tv_runsScored"
        style="@style/AttrText"
        android:text="Runs Scored: --" />

    <TextView
        android:id="@+id/tv_highestScore"
        style="@style/AttrText"
        android:text="Highest Score: --" />

    <!-- Waiting Timer -->
    <TextView
        android:id="@+id/tv_waiting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Waiting for opponent..."
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="24dp" />

</LinearLayout>

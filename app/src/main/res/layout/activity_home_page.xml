<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:background="@color/sporty_bg"
        android:padding="0dp"
        tools:context=".HomePageActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_marginTop="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginStart="16dp">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo"
            android:contentDescription="Game Logo" />

        <TextView
            android:id="@+id/tv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ð˜¾ð™–ð™§ð™™ð˜¾ð™¡ð™–ð™¨ð™"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:fontFamily="@font/sporty"
            android:layout_marginStart="8dp" />
    </LinearLayout>
    <Space
        android:layout_width="90dp"
        android:layout_height="0dp"
        />
    <ImageView
        android:id="@+id/iv_menu"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_menu"
        android:contentDescription="Menu"
        android:layout_marginEnd="16dp"
        android:layout_gravity="center" />
</LinearLayout>

<!-- Start Game Button (Centered, Big, and with Rounded Corners) -->
<Button
    android:id="@+id/btn_start_game"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Start Game"
    android:textSize="22sp"
    android:textColor="@android:color/white"
    android:backgroundTint="@color/blue_purple"
    android:padding="20dp"
    android:layout_marginTop="200dp"
    android:layout_gravity="center"

    android:layout_alignParentBottom="true"
    android:background="@drawable/rounded_button_bg" />
</LinearLayout>
